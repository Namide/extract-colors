{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "moduleResolution":"node",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "../lib"
  },
  "include": [
    "../src/**.d.ts"
  ],
  "exclude": ["node_modules"]
}